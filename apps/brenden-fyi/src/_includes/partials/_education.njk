<section id="skills">
  <div class="flex items-center justify-center gap-x-2 my-4">
    {% icon "book", "text-slate-600 dark:text-slate-300", 25 %} <h3 class="text-slate-600 dark:text-slate-300 text-2xl font-semibold">Education</h3>
  </div>

  <ul>
    {% for item in storyblok.story.content.education %}
    <li class="dark:text-gray-200 text-slate-900">
        <h4 class="text-xl font-semibold  dark:text-blue-200">
          {{item.degree}}
        </h4>
        <p class="text-lg text-blue-400 dark:text-yellow-400">{{item.name}}</p>
        <p class="italic text-sm">{{item.dateStart | formatDate('MMM, yyyy')}} -
          {% if item.current %}
            <span class="text-green-400 ">Current</span>
          {% else %}
            {{ item.dateEnd | formatDate('MMM, yyyy') }}
          {% endif %}

        </p>
        <ul class=" flex flex-wrap gap-1 md:gap-2">
            {% for minor in item.minors %}
              <li class="rounded bg-blue-400 border-2 border-solid border-slate-700 px-2 text-sm text-white w-fit" >{{minor.value}}</>
            {% endfor %}
        </ul>
      <hr class="my-2" />
    </li>
    {% endfor %}
  </ul>
</section>
