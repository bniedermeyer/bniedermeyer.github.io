<div class="p-4 bg-white dark:bg-slate-500 m-3 shadow-md rounded-md border-gray-400 h-min md:sticky md:top-3">
  {% image "https://a.storyblok.com/f/104216/623x623/ed930d31d1/portrait.jpeg", "Brenden", "rounded-full w-28 m-auto shadow-lg mb-4", "200px", "eager" %}
  <h1 class="text-center text-3xl font-bold text-indigo-800 dark:text-indigo-200">Brenden Niedermeyer</h1>
  <div class="grid grid-cols-1 lg:grid-cols-[.25fr_.5fr] gap-3  justify-items-center lg:justify-items-start lg:w-3/4 lg:ml-auto">
    {% for item in storyblok.story.content.contactInfo %}
       {% icon item.icon, "lg:justify-self-end text-slate-500 dark:text-slate-900", 24 %}

       {% if item.link %}
         <a class="text-slate-900 hover:text-slate-700 " href="{{item.link}}">{{item.value}}</a>
       {% else %}
        <span class="text-slate-900 ">{{ item.value }}</span>
       {% endif %}
    {% endfor %}
  </div>
</div>
