<section id="projects">
  <div class="flex items-center justify-center gap-x-2 my-4">
    {% icon "tool", "text-slate-600 dark:text-slate-300", 25 %} <h3 class="text-slate-600 dark:text-slate-300 text-2xl font-semibold">Projects</h3>
  </div>

  <ul>
    {% for item in storyblok.story.content.projects %}
    <li class="dark:text-gray-200 text-slate-900">

        <h4 class="text-xl font-semibold dark:text-blue-200 inline-block">
          {{item.name}}
         <sup class="relative inline-block">

          <a class="text-xs text-blue-400 dark:text-yellow-400 flex items-center gap-1" href="{{item.url}}" target="_blank" >Link {% icon "external-link", "", 10 %}</a>
         </sup>
        </h4>
        <div class="p-2">

        <p class="">
          {% if item.inProgress %}
          <span class="text-green-700 dark:text-green-300 font-bold italic">In Progress</span>
          {% endif %}

          {{ item.description }}

          </p>

        <figure class="p-2">
          <figcaption class="font-bold text-xs">Technologies Used:</figcaption>
          <ul class="list-disc p-2">
            {% for highlight in item.technologiesUsed %}
              <li >{{highlight.value}}</>
            {% endfor %}
          </ul>
        </figure>
        </div>
      <hr class="mb-2" />
    </li>
    {% endfor %}
  </ul>
</section>
